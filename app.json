{
  "expo": {
    "name": "ExpenseTracker",
    "slug": "ExpenseTracker",
    "version": "1.0.0",
    "orientation": "portrait",

    // This is your main app icon (1024x1024, no transparency)
    "icon": "./assets/expensify.png",

    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    // This is your splash screen (logo file, can be transparent)
    "splash": {
      "image": "./assets/expensify.png", 
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      // This uses your logo file for the foreground
      "adaptiveIcon": {
        "foregroundImage": "./assets/expensify.png", 
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}